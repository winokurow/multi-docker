{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name":"client",
            "image":"iwinokurow/multi-client",
            "hostname":"client",
            "essential":false
        },
        {
            "name":"nginx",
            "image":"iwinokurow/multi-nginx",
            "hostname":"nginx",
            "essential":true,
            "portMappings": [
                {
                    "hostPort":80,
                    "conainerPort":80
                }
            ],
            "links": ["client","server"]
        },
        {
            "name":"server",
            "image":"iwinokurow/multi-server",
            "hostname":"api",
            "essential":false
        },
        {
            "name":"worker",
            "image":"iwinokurow/multi-worker",
            "hostname":"worker",
            "essential":false
        }
    ]
    
}